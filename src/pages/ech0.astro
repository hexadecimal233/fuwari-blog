---
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
---

<MainGridLayout title={i18n(I18nKey.ech0)} description={i18n(I18nKey.ech0)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 p-4 relative w-full ">
            <iframe src="https://ech0.nichijou.moe" class="w-full min-h-[calc(100dvh-var(--banner-height))] rounded-[var(--radius-large)]" />
        </div>
    </div>
</MainGridLayout>
